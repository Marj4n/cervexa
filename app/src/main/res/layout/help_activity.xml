<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="eventHandler"
            type="com.gizthon.camera.activity.HelpActivity" />
    </data>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".activity.HelpActivity">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#ff09b0f3">

            <TextView
                android:id="@id/back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/back"
                android:drawablePadding="9.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="21.0dip"
                android:text="@string/helcenter"
                android:textColor="#ffffffff"
                android:textSize="17.0sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@id/ll_layout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@id/iv_help1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_help_bg" />

            <TextView
                android:layout_width="180.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42.0dip"
                android:text="@string/text1"
                android:textColor="#ff333333"
                android:textSize="15.0sp" />

            <ImageView
                android:id="@id/iv_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.5dip"
                android:src="@mipmap/icon_help_r" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/ll_layout2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@id/iv_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_help_l" />

            <ImageView
                android:id="@id/iv_help2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51.0dip"
                android:src="@mipmap/icon_help_bg2" />
        </LinearLayout>
    </LinearLayout>
</layout>