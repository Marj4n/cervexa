<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="eventHandler"
            type="com.gizthon.camera.dialog.ShareDialog" />
    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/WHITE"
        android:keepScreenOn="true"
        android:orientation="vertical"
        tools:context=".dialog.ShareDialog">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="#ff000000"
            android:textSize="24.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="10.0dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/tv_wchat"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_weight="1.0"
                android:src="@mipmap/icon_share_wchat" />

            <ImageView
                android:id="@id/tv_qq"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_weight="1.0"
                android:src="@mipmap/icon_share_qq" />

            <ImageView
                android:id="@id/tv_fecebook"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_weight="1.0"
                android:src="@mipmap/icon_share_facebook" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">

            <ImageView
                android:id="@id/tv_twitter"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_weight="1.0"
                android:src="@mipmap/icon_share_twitter" />

            <ImageView
                android:id="@id/tv_youtube"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_weight="1.0"
                android:src="@mipmap/icon_share_youtube" />
        </LinearLayout>

        <TextView
            android:id="@id/tv_cancel"
            android:layout_width="fill_parent"
            android:layout_height="56.0dip"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#ff000000"
            android:textSize="17.0sp" />
    </LinearLayout>
</layout>